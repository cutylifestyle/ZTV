<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_common"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_left"
        android:layout_width="@dimen/dp_48"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_common"
        app:layout_constraintStart_toStartOf="@+id/toolbar_common"
        app:layout_constraintTop_toTopOf="@+id/toolbar_common"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="@dimen/dp_48"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_common"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_common"
        app:layout_constraintTop_toTopOf="@+id/toolbar_common"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_common"
        app:layout_constraintEnd_toStartOf="@+id/img_right"
        app:layout_constraintStart_toEndOf="@+id/img_left"
        app:layout_constraintTop_toTopOf="@+id/toolbar_common" />


</android.support.constraint.ConstraintLayout>